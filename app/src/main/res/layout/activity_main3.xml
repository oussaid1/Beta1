<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/TopLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/textborderz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <TextView
                    android:id="@+id/back"
                    android:layout_width="79dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Info"
                    android:textAlignment="center"
                    android:textColor="@color/GreenP1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TopLayout">

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/loginNm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="top"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"
                        android:text="Username"> </TextView>

                    <EditText
                        android:id="@+id/loginNmIn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/loginNm"
                        android:layout_centerHorizontal="true"
                        android:padding="4dp"
                        android:drawableLeft="@drawable/ic_username"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/thinborders"> </EditText>

                    <TextView
                        android:id="@+id/PasswordNm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loginNmIn"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="1dp"
                        android:text="Password"
                        android:textSize="16sp"> </TextView>

                    <EditText
                        android:id="@+id/PasswordIn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/PasswordNm"
                        android:drawableStart="@drawable/ic_username"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/thinborders"> </EditText>

                    <Button
                        android:id="@+id/loginBtn"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/PasswordIn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16sp"
                        android:background="@drawable/buttonflat"
                        android:text=" Login "
                        android:textColor="@color/black"
                        android:textSize="16sp">

                    </Button>


                </RelativeLayout>

                <TextView
                    android:id="@+id/Register"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginBottom="16dp"
                    android:text="Register here !"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>