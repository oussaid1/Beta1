<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    tools:context=".Payment.PaymentList">


    <LinearLayout
        style="@style/MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/justborderz"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <TextView
                style="@style/SubTextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_today_items" />

            <TextView
                style="@style/DetailTextViews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="فلترة الائحة حسب الإختار " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <LinearLayout
                style="@style/SpinnerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinnerstextboxses">


                <Spinner
                    android:id="@+id/PayPCategorySpin"
                    style="@style/Spinners"
                    android:layout_width="160dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                style="@style/SpinnerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinnerstextboxses">

                <Spinner
                    android:id="@+id/PayPsearchSpin"
                    style="@style/Spinners"
                    android:layout_width="160dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start|center_vertical"
            android:padding="4dp"
            android:src="@drawable/ic_money" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ArPmolhanotCV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="inherit"
                android:maxLines="1"
                android:padding="2dp"
                android:text="@string/shop_name"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ArPPriceCV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:padding="2dp"
                android:text="المبلغ المدفوع"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ArPdateCV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:padding="2dp"
                android:text="@string/date"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/ArPid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:background="@drawable/justborderz">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/PayPmyrecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:elevation="8dp"
            android:padding="4dp"
            android:scrollbars="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.gms.ads.AdView
            android:id="@+id/PayPlistAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-9838187586217611/9542315857" />
    </LinearLayout>
</LinearLayout>
