<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GreenP4"
    android:theme="@style/AppTheme"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <RelativeLayout
            android:id="@+id/TopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentStart="true"
            android:elevation="4dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/justborderz"
            >

            <TextView
                android:id="@+id/back"
                android:layout_width="79dp"
                android:layout_height="25dp"
                android:textColor="@color/GreenP"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/back"
                android:visibility="gone"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/DateviewActvt2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="@color/GreenP1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:layout_marginBottom="16dp"
                android:background="@drawable/thinborders"
                android:paddingTop="2dp"
                android:textAlignment="center">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/TopLayout"
            android:layout_marginBottom="8dp"
            android:elevation="8dp"
            android:background="@drawable/justborderz"
            >

            <Button
                android:id="@+id/ShowList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:textColor="@color/GreenP"
                android:layout_margin="8dp"
                android:background="@drawable/buttonflat"
                android:padding="2dp"
                android:text="@string/show_today_items"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <SearchView
                android:layout_width="152dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="24dp"
                android:layout_toEndOf="@id/ShowList"
                android:background="@drawable/thinborders" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="536dp"
            android:layout_below="@id/relativeLayout1"
            android:layout_marginTop="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/justborderz"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/myrecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:elevation="8dp"
                android:padding="4dp"
                android:scrollbars="vertical" />
        </RelativeLayout>
</RelativeLayout>
</RelativeLayout>