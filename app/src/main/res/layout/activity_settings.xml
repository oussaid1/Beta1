<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".mainStuff.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layoutDirection="rtl"
            android:orientation="vertical">
            <Button
                android:id="@+id/menubuttonEdP"
                android:layout_width="29dp"
                android:layout_height="24dp"
                android:layout_marginBottom="4dp"
                android:onClick="showPopupSetting"
                android:background="@drawable/ic_baseline_menu_24"/>
            <TextView
                style="@style/MainTextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings" />

        </LinearLayout>

        <LinearLayout
            style="@style/MainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/justborderz"
            android:elevation="8dp"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <LinearLayout
                style="@style/MainContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SubTextViews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="السقف" />

                            <TextView
                                style="@style/DetailTextViews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="تحديد السقف ، الأقصى  للوضع العائلي " />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16sp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/limitQuotaDef"
                            style="@style/EditTextViewsNumbers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/define_limit_here" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/DetailTextViews"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:text="تحديد السقف ، الأقصى  لوضع الضيوف " />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/limitGuestDef"
                            style="@style/EditTextViewsNumbers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/set_your_guest_mode_quota" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/saveBtnforquotas"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/buttonflat"
                android:text="@string/save"
                tools:style="@style/ButtonsStyle" />

        </LinearLayout>

        <LinearLayout
            style="@style/MainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/justborderz"
            android:elevation="8dp"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/SubTextViews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الدخول" />

                        <TextView
                            style="@style/DetailTextViews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اعداد الحماية للدخول الى التطبيق " />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/usernameDef"
                        style="@style/TextViewsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/username_here" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/passwordDef"
                            style="@style/TextViewsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password"
                            android:inputType="numberPassword"
                            android:maxLength="4" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/ConfirmPassView"
                        style="@style/TextViewsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/confirm_password"
                        android:inputType="numberPassword"
                        android:maxLength="4" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/saveBtnforuserdata"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonflat"
                android:text="@string/save"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                tools:style="@style/ButtonsStyle" />


        </LinearLayout>

        <LinearLayout
            style="@style/MainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/justborderz"
            android:elevation="8dp"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/SubTextViews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الدفع" />

                        <TextView
                            style="@style/DetailTextViews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="عندما يتم تسوية الحساب كليا , يتم نقل المعطيات ال الأرشيف " />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:text="دفع مبلغ " />

                        <EditText
                            android:id="@+id/paidamountV"
                            style="@style/EditTextViewsNumbers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="لـــ" />

                        <LinearLayout
                            style="@style/SpinnerContainer"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:background="@drawable/spinnerstextboxses">

                            <Spinner
                                android:id="@+id/payfor"
                                style="@style/Spinners"
                                android:layout_gravity="center_horizontal" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/saveBtnforPayment"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonflat"
                android:text="@string/pay"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                tools:style="@style/ButtonsStyle" />


        </LinearLayout>

        <LinearLayout
            style="@style/MainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/justborderz"
            android:elevation="8dp"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/SubTextViews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الحذف" />

                        <TextView
                            style="@style/DetailTextViews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="حذف الكل حسب للمحل  " />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextViewsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="@string/deletefor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/spinnerstextboxses">

                            <Spinner
                                android:id="@+id/shopTodelete"
                                style="@style/Spinners"
                                android:layout_width="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/deleteby"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonflat"
                android:text="@string/delete"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:style="@style/ButtonsStyle" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>




