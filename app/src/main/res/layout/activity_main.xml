<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <RelativeLayout
            android:id="@+id/TitleRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/textborderz"
            android:theme="@style/AppTheme">

            <TextView
                android:id="@+id/dateView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittextborders"
                android:padding="4dp"
                android:textAlignment="center" />

            <Switch
                android:id="@+id/SwitchGuest"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="8dp"
                android:text="@string/guest_mode"
                android:textColor="@color/edittextcolors" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelLout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TitleRL"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/textborderz">

            <TextView
                android:id="@+id/TotalTodayNm"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:text="@string/total" />

            <TextView
                android:id="@+id/TotalTodayOut"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:maxLines="1"
                android:layout_below="@id/TotalTodayNm"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextborders"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/edittextcolors" />

            <TextView
                android:id="@+id/QuotaLeftNm"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/TotalTodayNm"
                android:text="@string/left_of_quota" />

            <TextView
                android:id="@+id/QuotaLeftOut"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_below="@id/QuotaLeftNm"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:maxLines="1"
                android:layout_toEndOf="@id/TotalTodayOut"
                android:background="@drawable/edittextborders"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/edittextcolors" />

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="140dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:background="@drawable/thinborders"
                android:orientation="vertical">

                <Button
                    android:id="@+id/BtnRed"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/redlight"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/BtnOrange"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_below="@id/BtnRed"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/orangelight"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/BtnGreen"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_below="@id/BtnOrange"
                    android:layout_marginTop="22dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/greenlight"
                    android:visibility="invisible"> </Button>

            </RelativeLayout>

            <TextView
                android:id="@+id/Limit"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:layout_marginEnd="52dp"
                android:text="@string/limit_exceeded"
                android:textColor="@color/red"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/Carefull"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@id/Limit"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:layout_marginEnd="52dp"
                android:text="@string/be_carefull"
                android:textColor="@color/orange"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/Good"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@id/Carefull"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="16dp"
                android:text="@string/good_to_go"
                android:textColor="@color/green"
                android:visibility="invisible"> </TextView>

            <TextView
                android:id="@+id/hereisqt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/QuotaLeftOut"
                android:layout_marginStart="8dp"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="18dp"
                android:textColor="@color/orange"
                android:maxLines="1"
                android:layout_toEndOf="@+id/hereisurqt"
                android:text="  الكوطة  المحددة"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/hereisurqt"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/TotalTodayOut"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittextborders"

                android:textAlignment="center" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RelLout2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/textborderz">

            <TextView
                android:id="@+id/ItemNameNm"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:text="إسم المنتوج"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ItemPriceNm"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="56dp"
                android:text="ثمن المنتوج"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ItemNameNm" />

            <TextView
                android:id="@+id/molhanoutName"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="12dp"
                android:text="@string/shop_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ItemPriceNm" />

            <EditText
                android:id="@+id/ItemNameIn"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="28dp"
                android:maxLines="1"
                android:textAlignment="center"
                android:background="@drawable/edittextborders"
                android:hint="@string/name_here"
                android:maxLength="16"
                android:padding="4dp"
                android:paddingEnd="8dp"
                android:paddingStart="4dp"
                android:textColor="@color/edittextcolors"
                app:layout_constraintLeft_toRightOf="@id/ItemNameNm"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/ItemNameInSp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="28dp"
                android:textColor="@color/edittextcolors"
                app:layout_constraintLeft_toRightOf="@id/ItemNameIn"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ItemPriceIn"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/edittextborders"
                android:hint="@string/price_in_here"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="4dp"
                android:textColor="@color/edittextcolors"
                app:layout_constraintLeft_toRightOf="@id/ItemPriceNm"
                app:layout_constraintTop_toBottomOf="@id/ItemNameIn" />

            <EditText
                android:id="@+id/molhanoutNameIn"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginStart="26dp"
                android:padding="4dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="12dp"
                android:maxLines="1"
                android:textAlignment="center"
                android:background="@drawable/edittextborders"
                android:hint="@string/name_here"
                android:maxLength="16"
                android:textColor="@color/edittextcolors"
                app:layout_constraintLeft_toRightOf="@id/molhanoutName"
                app:layout_constraintTop_toBottomOf="@id/ItemPriceIn" />

            <Spinner
                android:id="@+id/molhanoutNameInSp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="10dp"
                android:padding="4dp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/molhanoutNameIn"
                app:layout_constraintTop_toBottomOf="@+id/SaveBtn"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/AddBtn"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/buttonflat"
                android:text="@string/add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/SaveBtn"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/buttonstyles"
                android:text="@string/save"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/AddBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>


</ScrollView>