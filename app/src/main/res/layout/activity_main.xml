<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GreenP4"
    android:theme="@style/AppTheme"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/AppTheme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/justborderz"
            android:elevation="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateView"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/GreenP" />

            <RelativeLayout
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/SwitchGuest"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:text="@string/guest_mode"
                    android:textAlignment="center"
                    android:textColor="@color/GreenP" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/thinborders"
            android:elevation="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:background="@drawable/justborderz"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="2dp"
                        android:text="@string/totaltoday"
                        android:textAlignment="center"
                        android:textColor="@color/orange" />

                    <TextView
                        android:id="@+id/TotalTodayOut"
                        android:layout_width="80dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/edittextborders"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@color/GreenP" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="2dp"
                        android:text="@string/total"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/TotalallOut"
                        android:layout_width="80dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittextborders"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@color/GreenP" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/QuotaLeftNm"
                        android:layout_width="100dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="2dp"
                        android:text="@string/left_of_quota"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/QuotaLeftOut"
                        android:layout_width="80dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittextborders"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@color/GreenP" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="2dp"
                        android:maxLines="1"
                        android:text="@string/limit"
                        android:textAlignment="center"
                        android:textColor="@color/Green" />

                    <TextView
                        android:id="@+id/hereisurqt"
                        android:layout_width="80dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/edittextborders"
                        android:textAlignment="center" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/thinborders"
                android:elevation="4dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/BtnRed"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                   android:layout_margin="8dp"
                    android:background="@drawable/redlight"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/BtnOrange"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/orangelight"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/BtnGreen"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/greenlight"
                    android:visibility="invisible" />

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/justborderz"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/thinborders"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/thinborders"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/AddBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/buttonflat"
                            android:text="@string/add" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="2"
                        android:background="@drawable/thinborders"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_margin="4dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center_horizontal"
                            android:text="@string/shop_name" />

                        <AutoCompleteTextView
                            android:id="@+id/molhanoutNameIn"
                            android:layout_width="134dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/justborderz"
                            android:completionThreshold="2"
                            android:hint="@string/shopnamehere"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/GreenP" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="2"
                        android:background="@drawable/thinborders"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center_horizontal"
                            android:text="@string/productname" />

                        <AutoCompleteTextView
                            android:id="@+id/ItemNameIn"
                            android:layout_width="134dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/justborderz"
                            android:completionThreshold="2"
                            android:gravity="center"
                            android:hint="@string/goodsname"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/GreenP" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/justborderz"
                    android:elevation="2dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/thinborders"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/buttonflat"
                                android:text="+" />

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:layout_centerVertical="true"
                                android:layout_margin="4dp" />

                            <Button
                                android:id="@+id/minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/buttonflat"
                                android:text="-" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/thinborders"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="4dp"
                                android:text="@string/quantity"
                                android:textAlignment="center" />

                            <EditText
                                android:id="@+id/quantity"
                                android:layout_width="62dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/edittextborders"
                                android:inputType="numberDecimal"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:padding="4dp"
                                android:text="1"
                                android:textAlignment="center"
                                android:textColor="@color/GreenP" />

                            <Spinner
                                android:id="@+id/QuanType"
                                android:layout_width="118dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_gravity="center_horizontal"
                                android:dropDownWidth="wrap_content"
                                android:dropDownSelector="@color/GreenP4"
                                android:fadingEdgeLength="4dp"
                                android:paddingBottom="8dp"
                                android:hapticFeedbackEnabled="true"
                                android:elevation="4dp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/thinborders"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="24dp"
                            android:layout_margin="4dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="38dp"
                            android:textAlignment="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="2dp"
                            android:paddingBottom="4dp"
                            android:text="@string/productprice" />

                        <EditText
                            android:id="@+id/ItemPriceIn"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:textAlignment="center"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/edittextborders"
                            android:hint="@string/price_in_here"
                            android:inputType="numberDecimal"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:textColor="@color/GreenP" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.gms.ads.AdView
                android:id="@+id/admain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-9838187586217611/1394031397" />
        </RelativeLayout>
    </LinearLayout>


</ScrollView>