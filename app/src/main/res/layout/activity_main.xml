<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".mainStuff.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/_12_01_20"
            android:textAlignment="gravity"
            android:textColor="@color/white" />


        <Switch
            android:id="@+id/SwitchGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:text="@string/guest_mode"
            android:textAlignment="center" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:src="@drawable/ic_shopping" />

        <TextView
            style="@style/MainTextViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="اضف سلعة جديدة" />


    </LinearLayout>

    <LinearLayout
        style="@style/MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/justborderz"
        android:orientation="vertical">

        <TextView
            style="@style/SubTextViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left_of_quota" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/DetailTextViews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="المتبقي من السقف المحدد حسب الوضع عائلي / ضيوف " />

                <TextView
                    android:id="@+id/hereisurqt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="159"
                    style="@style/SubTextViews"
                    android:textColor="@color/Text_details" />
            </LinearLayout>


            <TextView
                android:id="@+id/QuotaLeftOut"
                style="@style/NumbersTextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="1"
                android:text="195" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/justborderz"
        android:elevation="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtnRed2"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@drawable/redlight"
            android:visibility="invisible" />

        <Button
            android:id="@+id/BtnRed"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@drawable/redlight"
            android:visibility="invisible" />

        <Button
            android:id="@+id/BtnOrange2"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@drawable/orangelight"
            android:visibility="invisible" />

        <Button
            android:id="@+id/BtnOrange"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@drawable/orangelight"
            android:visibility="invisible" />

        <Button
            android:id="@+id/BtnYellow2"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@drawable/yellowlight"
            android:visibility="invisible" />

        <Button
            android:id="@+id/BtnYellow"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@drawable/yellowlight"
            android:visibility="invisible" />

        <Button
            android:id="@+id/BtnGreen2"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@drawable/greenlight"
            android:visibility="invisible" />

        <Button
            android:id="@+id/BtnGreen"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@drawable/greenlight"
            android:visibility="invisible" />


    </LinearLayout>

    <LinearLayout
        style="@style/MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/justborderz"
        android:orientation="vertical">

        <TextView
            style="@style/MainTextViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المجموع" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:background="@drawable/justborderz"
            android:layoutDirection="rtl"
            android:orientation="horizontal">


            <TextView
                style="@style/DetailTextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="المجموع العام للكل ، ناقص مجموع الدفع للكل" />

            <TextView
                android:id="@+id/TotalallOut"
                style="@style/SumTextViews"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="159" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="المجموع العام حسب" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/SpinnerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinnerstextboxses">

                    <Spinner
                        android:id="@+id/SumCategory"
                        style="@style/Spinners"
                        android:layout_width="0dp"
                        android:layout_height="40sp"
                        android:layout_weight="1"
                       />
                </LinearLayout>

                <LinearLayout
                    style="@style/SpinnerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinnerstextboxses">

                    <Spinner
                        android:id="@+id/SumSearch"
                        style="@style/Spinners"
                        android:layout_width="0dp"
                        android:layout_height="40sp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/SpinnerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinnerstextboxses">

                    <Spinner
                        android:id="@+id/SumsearchBydate"
                        style="@style/Spinners"
                        android:layout_width="0dp"
                        android:layout_height="40sp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2dp"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TotalTodayOut"
            style="@style/SumTextViews"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/justborderz"
            android:text="159"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <com.google.android.gms.ads.AdView
            android:id="@+id/admain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-9838187586217611/1394031397" />
    </LinearLayout>

</LinearLayout>
