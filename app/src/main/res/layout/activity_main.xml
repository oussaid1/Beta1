<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <RelativeLayout
            android:id="@+id/TitleRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/textborderz">

            <TextView
                android:id="@+id/dateView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittextborders"
                android:maxLines="1"
                android:padding="4dp"
                android:textAlignment="center" />

            <Switch
                android:id="@+id/SwitchGuest"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="8dp"
                android:text="@string/guest_mode"
                android:textColor="@color/edittextcolors" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelLout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TitleRL"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/textborderz">

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="140dp"
                android:layout_alignParentStart="true">


                <TextView
                    android:id="@+id/TotalTodayNm"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/orange"
                    android:layout_marginBottom="2dp"
                    android:text="@string/totaltoday"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/TotalTodayOut"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/TotalTodayNm"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edittextborders"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:textColor="@color/edittextcolors" />

                <TextView
                    android:id="@+id/QuotaLeftNm"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toEndOf="@id/TotalTodayNm"
                    android:text="@string/left_of_quota"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/QuotaLeftOut"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/QuotaLeftNm"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="22dp"
                    android:layout_toEndOf="@id/TotalTodayOut"
                    android:background="@drawable/edittextborders"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:textColor="@color/edittextcolors" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/TotalallOut"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/total"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/TotalallOut"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edittextborders"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:textColor="@color/edittextcolors" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_above="@+id/hereisurqt"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginBottom="2dp"
                    android:maxLines="1"
                    android:text="@string/limit"
                    android:textAlignment="center"
                    android:textColor="@color/green" />

                <TextView
                    android:id="@+id/hereisurqt"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edittextborders"
                    android:textAlignment="center" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="140dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:background="@drawable/thinborders"
                android:orientation="vertical">

                <Button
                    android:id="@+id/BtnRed"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/redlight"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/BtnOrange"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_below="@id/BtnRed"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/orangelight"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/BtnGreen"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_below="@id/BtnOrange"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/greenlight"
                    android:visibility="invisible"></Button>

            </RelativeLayout>

            <TextView
                android:id="@+id/Limit"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="52dp"
                android:text="@string/limit_exceeded"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/Carefull"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@id/Limit"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="52dp"
                android:text="@string/be_carefull"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/Good"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@id/Carefull"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="16dp"
                android:text="@string/good_to_go"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:visibility="invisible"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RelLout2"
            android:layout_margin="8dp"
            android:background="@drawable/textborderz">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">
                <LinearLayout
                    android:id="@+id/linearItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/ItemNameNm1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_horizontal"
                        android:text="@string/productname" />

                    <AutoCompleteTextView
                        android:id="@+id/ItemNameIn"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/edittextborders"
                        android:completionThreshold="2"
                        android:gravity="center"
                        android:hint="@string/name_here"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@color/edittextcolors" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/ho1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearItemName"
                    android:background="@drawable/thinborders"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/quna"
                        android:layout_width="244dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"

                        >

                        <RelativeLayout
                            android:id="@+id/icrequant"
                            android:layout_width="30dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/thinborders"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/plus"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/buttonflat"
                                android:layout_alignParentTop="true"
                                android:text="+" />

                            <Button
                                android:id="@+id/mi"
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:layout_centerVertical="true" />

                            <Button
                                android:id="@+id/minus"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/buttonflat"
                                android:layout_alignParentBottom="true"
                                android:text="-" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/quntityNm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="2dp"
                            android:text="الكمية"
                            android:textAlignment="center" />

                        <EditText
                            android:id="@+id/quantity"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/quntityNm"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/edittextborders"
                            android:inputType="numberDecimal"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/edittextcolors" />

                        <Spinner
                            android:id="@+id/QuanType"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_toStartOf="@id/quantity"
                            android:elevation="4dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/linearPrice"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                       android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"

                        >

                        <TextView
                            android:id="@+id/ItemPriceNm"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="-2dp"
                            android:layout_marginBottom="2dp"
                            android:text="@string/productprice"
                            android:textAlignment="center" />

                        <EditText
                            android:id="@+id/ItemPriceIn"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/ItemPriceNm"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/edittextborders"
                            android:hint="@string/price_in_here"
                            android:inputType="numberDecimal"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/edittextcolors" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linearshopname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ho1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/thinborders"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/molhanoutName"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="2dp"
                        android:text="@string/shop_name" />

                    <AutoCompleteTextView
                        android:id="@+id/molhanoutNameIn"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/molhanoutName"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/edittextborders"
                        android:completionThreshold="2"
                        android:hint="@string/name_here"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@color/edittextcolors" />
                </RelativeLayout>

                <Button
                    android:id="@+id/AddBtn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/linearshopname"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/buttonflat"
                    android:text="@string/add" />

                <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/admain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-9838187586217611/6660652596"></com.google.android.gms.ads.AdView>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


</ScrollView>