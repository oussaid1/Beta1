<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <LinearLayout
            style="@style/MainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/justborderz"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/molhanoutNameIn"
                style="@style/AutoCompleteTextViews"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/shopnamehere" />

        </LinearLayout>

        <LinearLayout
            style="@style/MainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/justborderz"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/ItemNameIn"
                style="@style/AutoCompleteTextViews"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/goodsname" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/justborderz"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ItemPriceIn"
            style="@style/EditTextViewsNumbers"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/price_in_here" />

        <Button
            android:id="@+id/AddBtn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/buttonflat"
            android:text="@string/add"
            tools:style="@style/ButtonsStyle" />

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/SpinnerContainer"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/spinnerstextboxses"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/QuanType"
                    style="@style/Spinners"
                    android:layout_width="100dp"
                    android:layout_height="30dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/plus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_up" />

                <TextView
                    android:id="@+id/quantityView"
                    android:layout_width="62dp"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:text="1"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_down" />

                <TextView
                    style="@style/TextViewsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity" />

            </LinearLayout>


        </LinearLayout>



    <LinearLayout
        style="@style/MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/justborderz"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    />


        <AutoCompleteTextView
            android:id="@+id/DateIn"
            style="@style/AutoCompleteTextViews"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/_12_01_20" />

        <Button
            android:id="@+id/Cancel"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/buttonflat"
            android:text="@string/cancel"
            tools:style="@style/ButtonsStyle" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    </RelativeLayout>
</LinearLayout>